SELECT player_name, jersey_no\
FROM player_mast\
WHERE posi_to_play = 'GK' \
  AND team_id = (SELECT country_id FROM soccer_country WHERE country_name = 'Germany')\
  AND player_id IN (\
    SELECT player_id \
    FROM match_details\
    WHERE play_stage = 'G' AND team_id = (SELECT country_id FROM soccer_country WHERE country_name = 'Germany')\
);}
